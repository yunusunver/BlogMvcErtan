@model IEnumerable<BlogMvcErtan.Models.Makaleler>

@{
    ViewBag.Title = "Arama";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    body, html {
        overflow-x: hidden;
        overflow-y: auto;
    }
</style>
<link href="~/Content/listCSS.css" rel="stylesheet" />
<div class="container" style="margin-top:20px">
    <div class="row">
        <div class="[ col-xs-12 col-sm-8 col-md-9]">
            <ul class="event-list">
               @foreach (var item in Model)
               {
                <li>
                    <time datetime="@item.MakaleTarih">
                        <span class="day">@string.Format("{0:dd}",item.MakaleTarih)</span>
                        <span class="month">@string.Format("{0:MMM}", item.MakaleTarih)</span>
                        <span class="year">@string.Format("{0:yyyy}", item.MakaleTarih)</span>
                        <span class="time">8:00 PM</span>
                    </time>
                    <img alt="My 24th Birthday!" src="@item.MakaleFoto" />
                    <div class="info">
                        <h2 class="title">@item.MakaleBasligi</h2>
                        <p class="desc" style="overflow: hidden;text-overflow: ellipsis;white-space:nowrap">@item.Makaleİcerik</p>
                        <ul>
                            
                            <li style="width:50%;">@item.OkunmaSayisi <span class="fa fa-eye"></span></li>
                            <li style="width:50%;">@item.Yorumlars.Count() <span class="fa fa-comment"></span></li>
                        </ul>
                    </div>
                    <div class="social">
                        <ul>
                            <li class="facebook" style="width:33%;"><a href="#facebook"><span class="fa fa-facebook"></span></a></li>
                            <li class="twitter" style="width:34%;"><a href="#twitter"><span class="fa fa-twitter"></span></a></li>
                            <li class="google-plus" style="width:33%;"><a href="#google-plus"><span class="fa fa-google-plus"></span></a></li>
                        </ul>
                    </div>
                </li>
               }
                
                
            </ul>
        </div>
    </div>
</div>

